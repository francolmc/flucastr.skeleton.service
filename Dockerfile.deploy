# Dockerfile.deploy (para Dokploy)
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml ./

# Install pnpm
RUN npm install -g pnpm

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Generate Prisma Client
RUN pnpm prisma generate

# Build the application
RUN pnpm build

# Expose port
EXPOSE 3001

# Start script with database push
CMD ["sh", "-c", "pnpm prisma db push --force-reset && pnpm start:prod"]